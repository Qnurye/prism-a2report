    },
    {
      "type": "diff",
      "title": "Refactor: Replace callback with async/await",
      "language": "javascript",
      "before": "function fetchUser(id, callback) {\n  db.query('SELECT * FROM users WHERE id = ?', [id], (err, rows) => {\n    if (err) {\n      callback(err, null);\n      return;\n    }\n    callback(null, rows[0]);\n  });\n}",
      "after": "async function fetchUser(id) {\n  const rows = await db.query(\n    'SELECT * FROM users WHERE id = ?',\n    [id]\n  );\n  return rows[0];\n}"
