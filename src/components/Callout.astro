---
interface Props {
  variant: "info" | "warning" | "success" | "error";
  title?: string;
}

const { variant, title } = Astro.props;

const styles = {
  info: "border-primary bg-primary/5 text-primary",
  warning: "border-yellow-500 bg-yellow-500/5 text-yellow-700 dark:text-yellow-400",
  success: "border-green-500 bg-green-500/5 text-green-700 dark:text-green-400",
  error: "border-destructive bg-destructive/5 text-red-700 dark:text-red-400",
};

const icons = {
  info: "ℹ",
  warning: "⚠",
  success: "✓",
  error: "✕",
};
---

<aside class={`my-6 rounded-lg border-l-4 p-4 ${styles[variant]}`} role="note">
  {
    title && (
      <p class="font-semibold font-ui mb-1 flex items-center gap-2">
        <span class="text-lg">{icons[variant]}</span>
        {title}
      </p>
    )
  }
  <div class="text-sm leading-relaxed [&>*]:text-current">
    <slot />
  </div>
</aside>
