{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "author": { "type": "string", "default": "Prism AI" },
    "date": { "type": "string", "format": "date" },
    "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "category": { "type": "string" }
      }
    },
    "sections": {
      "type": "array",
      "items": { "$ref": "#/definitions/Section" }
    }
  },
  "required": ["title", "sections"],
  "definitions": {
    "Section": {
      "oneOf": [
        { "$ref": "#/definitions/TextSection" },
        { "$ref": "#/definitions/ChartSection" },
        { "$ref": "#/definitions/TableSection" },
        { "$ref": "#/definitions/CodeSection" },
        { "$ref": "#/definitions/CalloutSection" },
        { "$ref": "#/definitions/StatCardSection" },
        { "$ref": "#/definitions/TabsSection" },
        { "$ref": "#/definitions/TimelineSection" },
        { "$ref": "#/definitions/FigureSection" },
        { "$ref": "#/definitions/QuoteSection" },
        { "$ref": "#/definitions/AccordionSection" },
        { "$ref": "#/definitions/ComparisonSection" },
        { "$ref": "#/definitions/ProgressSection" },
        { "$ref": "#/definitions/MetricsGridSection" },
        { "$ref": "#/definitions/StepsSection" },
        { "$ref": "#/definitions/DiffSection" },
        { "$ref": "#/definitions/EmbedSection" },
        { "$ref": "#/definitions/GallerySection" },
        { "$ref": "#/definitions/SourceListSection" }
      ]
    },
    "TextSection": {
      "type": "object",
      "properties": {
        "type": { "const": "text" },
        "heading": { "type": "string" },
        "level": { "type": "integer", "minimum": 1, "maximum": 6, "default": 2 },
        "content": { "type": "string", "description": "Markdown content" }
      },
      "required": ["type", "content"]
    },
    "ChartSection": {
      "type": "object",
      "properties": {
        "type": { "const": "chart" },
        "chartType": { "enum": ["line", "bar", "pie", "doughnut"] },
        "title": { "type": "string" },
        "data": { "type": "object", "description": "Chart.js data object" },
        "options": { "type": "object", "description": "Chart.js options" }
      },
      "required": ["type", "chartType", "data"]
    },
    "TableSection": {
      "type": "object",
      "properties": {
        "type": { "const": "table" },
        "caption": { "type": "string" },
        "headers": { "type": "array", "items": { "type": "string" } },
        "rows": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "required": ["type", "headers", "rows"]
    },
    "CodeSection": {
      "type": "object",
      "properties": {
        "type": { "const": "code" },
        "language": { "type": "string" },
        "filename": { "type": "string" },
        "code": { "type": "string" }
      },
      "required": ["type", "code"]
    },
    "CalloutSection": {
      "type": "object",
      "properties": {
        "type": { "const": "callout" },
        "variant": { "enum": ["info", "warning", "success", "error"] },
        "title": { "type": "string" },
        "content": { "type": "string" }
      },
      "required": ["type", "variant", "content"]
    },
    "StatCardSection": {
      "type": "object",
      "properties": {
        "type": { "const": "statcard" },
        "label": { "type": "string" },
        "value": { "oneOf": [{ "type": "string" }, { "type": "number" }] },
        "description": { "type": "string" },
        "trend": { "enum": ["up", "down", "neutral"] },
        "trendValue": { "type": "string" }
      },
      "required": ["type", "label", "value"]
    },
    "NonTabsSection": {
      "oneOf": [
        { "$ref": "#/definitions/TextSection" },
        { "$ref": "#/definitions/ChartSection" },
        { "$ref": "#/definitions/TableSection" },
        { "$ref": "#/definitions/CodeSection" },
        { "$ref": "#/definitions/CalloutSection" },
        { "$ref": "#/definitions/StatCardSection" },
        { "$ref": "#/definitions/TimelineSection" },
        { "$ref": "#/definitions/FigureSection" },
        { "$ref": "#/definitions/QuoteSection" },
        { "$ref": "#/definitions/AccordionSection" },
        { "$ref": "#/definitions/ComparisonSection" },
        { "$ref": "#/definitions/ProgressSection" },
        { "$ref": "#/definitions/MetricsGridSection" },
        { "$ref": "#/definitions/StepsSection" },
        { "$ref": "#/definitions/DiffSection" },
        { "$ref": "#/definitions/EmbedSection" },
        { "$ref": "#/definitions/GallerySection" },
        { "$ref": "#/definitions/SourceListSection" }
      ]
    },
    "TabsSection": {
      "type": "object",
      "properties": {
        "type": { "const": "tabs" },
        "tabs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "sections": {
                "type": "array",
                "items": { "$ref": "#/definitions/NonTabsSection" },
                "minItems": 1
              }
            },
            "required": ["label", "sections"]
          },
          "minItems": 2
        },
        "defaultTab": { "type": "integer", "minimum": 0 }
      },
      "required": ["type", "tabs"]
    },
    "TimelineSection": {
      "type": "object",
      "properties": {
        "type": { "const": "timeline" },
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["date", "title"]
          },
          "minItems": 1
        }
      },
      "required": ["type", "events"]
    },
    "FigureSection": {
      "type": "object",
      "properties": {
        "type": { "const": "figure" },
        "src": { "type": "string" },
        "alt": { "type": "string" },
        "caption": { "type": "string" },
        "width": { "type": "string" }
      },
      "required": ["type", "src", "alt"]
    },
    "QuoteSection": {
      "type": "object",
      "properties": {
        "type": { "const": "quote" },
        "text": { "type": "string" },
        "author": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": ["type", "text", "author"]
    },
    "AccordionSection": {
      "type": "object",
      "properties": {
        "type": { "const": "accordion" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "content": { "type": "string" }
            },
            "required": ["title", "content"]
          },
          "minItems": 1
        },
        "allowMultiple": { "type": "boolean" }
      },
      "required": ["type", "items"]
    },
    "ComparisonSection": {
      "type": "object",
      "properties": {
        "type": { "const": "comparison" },
        "title": { "type": "string" },
        "layout": { "enum": ["side-by-side", "stacked"], "default": "side-by-side" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "highlights": { "type": "array", "items": { "type": "string" } },
              "variant": { "enum": ["positive", "negative", "neutral"] }
            },
            "required": ["label", "highlights"]
          },
          "minItems": 2
        }
      },
      "required": ["type", "items"]
    },
    "ProgressSection": {
      "type": "object",
      "properties": {
        "type": { "const": "progress" },
        "mode": { "enum": ["bar", "milestones"], "default": "bar" },
        "label": { "type": "string" },
        "value": { "type": "number" },
        "max": { "type": "number", "default": 100 },
        "showPercent": { "type": "boolean" },
        "variant": { "enum": ["default", "success", "warning", "error"] },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "completed": { "type": "boolean" },
              "current": { "type": "boolean" }
            },
            "required": ["label"]
          }
        }
      },
      "required": ["type"]
    },
    "MetricsGridSection": {
      "type": "object",
      "properties": {
        "type": { "const": "metrics-grid" },
        "columns": { "type": "integer", "minimum": 1, "maximum": 6, "default": 3 },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "value": { "oneOf": [{ "type": "string" }, { "type": "number" }] },
              "trend": { "enum": ["up", "down", "neutral"] },
              "trendValue": { "type": "string" }
            },
            "required": ["label", "value"]
          },
          "minItems": 1
        }
      },
      "required": ["type", "metrics"]
    },
    "StepsSection": {
      "type": "object",
      "properties": {
        "type": { "const": "steps" },
        "orientation": { "enum": ["horizontal", "vertical"], "default": "horizontal" },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["title"]
          },
          "minItems": 1
        },
        "currentStep": { "type": "integer", "minimum": 0 }
      },
      "required": ["type", "steps"]
    },
    "DiffSection": {
      "type": "object",
      "properties": {
        "type": { "const": "diff" },
        "language": { "type": "string" },
        "title": { "type": "string" },
        "before": { "type": "string" },
        "after": { "type": "string" }
      },
      "required": ["type", "before", "after"]
    },
    "EmbedSection": {
      "type": "object",
      "properties": {
        "type": { "const": "embed" },
        "src": { "type": "string", "format": "uri" },
        "title": { "type": "string" },
        "aspectRatio": { "type": "string", "default": "16:9" },
        "allowFullscreen": { "type": "boolean", "default": true }
      },
      "required": ["type", "src"]
    },
    "GallerySection": {
      "type": "object",
      "properties": {
        "type": { "const": "gallery" },
        "columns": { "type": "integer", "minimum": 1, "maximum": 6, "default": 3 },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": { "type": "string" },
              "alt": { "type": "string" },
              "caption": { "type": "string" }
            },
            "required": ["src", "alt"]
          },
          "minItems": 1
        }
      },
      "required": ["type", "images"]
    },
    "SourceListSection": {
      "type": "object",
      "properties": {
        "type": { "const": "source-list" },
        "title": { "type": "string" },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "url": { "type": "string" },
              "author": { "type": "string" },
              "date": { "type": "string" }
            },
            "required": ["id", "title"]
          },
          "minItems": 1
        }
      },
      "required": ["type", "sources"]
    }
  }
}
